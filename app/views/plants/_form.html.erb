<%= form_for @plant, :url => plants_path, :html => { :multipart => true } do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.file_field :avatar %>

  <div class="field">
    <%= f.label :plant_name %><br>
    <%= f.text_field :plant_name %>
  </div>

  <div class="field">
    <%= f.label :region %><br>
    <select name="plant[region]">
      <option value="">Select Region</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
      <option value="11">11</option>
      <option value="12">12</option>
      <option value="13">13</option>
      <option value="0">All</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :season %><br>
    <select name="plant[season]">
      <option value="">Select Season</option>
      <option value="cold">Cold</option>
      <option value="warm">Warm</option>
      <option value="any">Any</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
